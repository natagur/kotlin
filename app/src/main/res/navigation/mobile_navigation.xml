<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.developmobileapp.ui.home.HomeFragment"
        android:icon="@drawable/ic_home"
        android:title="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:icon="@drawable/ic_sounds"
        android:name="com.example.developmobileapp.ui.listen.ListenFragment"
        android:title="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:icon="@drawable/ic_sedan"
        android:name="com.example.developmobileapp.ui.profile.ProfileFragment"
        android:title="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>